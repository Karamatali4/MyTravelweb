<div class="container-fluid">
    <div class="row justify-content-evenly">
        <div class="col-12 col-md-5 text-center">
            <h1 class="mt-5 text-primary">Please Register here</h1>
            <form action="/register" class="row g-3 mt-5" method="post">
                <div class="col-md-6 my-3">
                    <input type="text" class="form-control" name="fullname" id="validationServer01" required
                        placeholder="Full Name">
                </div>

                <div class="col-md-6 my-3 ">
                    <input type="text" class="form-control" name="username" id="validationServer02" required
                        placeholder="User Name">
                </div>

                <div class="col-md-6 my-3">
                    <input type="email" name="email" class="form-control" id="validationServer02" required
                        placeholder="email">
                </div>

                <div class="col-md-6 my-3">
                    <input type="text" class="form-control" name="phone" minlength="11" maxlength="11" id="validationServer03" required
                        placeholder="Phone Number">
                </div>

                <div class="col-md-5 my-3">
                    <input type="number" name="age" class="form-control" id="validationServer02" required
                        placeholder="age">
                </div>

                <div class="col-md-4 my-3">

                    <div class="maxl my-3">
                        <label class="radio inline">
                            <input type="radio" name="gender" value="male" checked>
                            <span> Male </span>
                        </label>
                        <label class="radio inline">
                            <input type="radio" name="gender" value="female">
                            <span>Female </span>
                        </label>
                    </div>

                </div>
                
                <div class="col-md-5 my-2">
                    <input type="password" name="password" minlength="3" class="form-control" id="validationServer02" required
                        placeholder="password">
                </div>
                <div class="col-md-5 my-2">
                    <input type="password" name="confirmpassword" minlength="3" class="form-control" id="validationServer02" required
                        placeholder="Confirm Password"> <span style="color: red;">{{passwordnotsame}}</span>
                </div>
                <div class="col-12 my-2 mt-4">
                    <button class="btn btn-primary fw-bold fs-6 px-5" type="submit">Sign up</button>
                </div>
            </form>
        </div>
        <div class="col-12 col-md-5 mt-5">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                class="img-fluid mt-5" alt="Sample image">
        </div>
    </div>
</div>